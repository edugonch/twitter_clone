<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-2 col-md-offset-2">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <div class="col-md-12">
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-md-4">
                  </div>
                  <div class="col-md-4">
                  </div>
                  <div class="col-md-4">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="row">
            <div class="col-md-12">
              <%= form_for(Twitt.new, remote: true) do |f| %>
                <div class="input-group">
                      <%= f.text_field :text, placeholder: "Say something...", class: "form-control" %>
                      <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">Twitt!</button>
                      </span>
                    </div>
                <%end%>
            </div>
        </div>
        <div class="row">
          <div class="col-md-12" id="twitts_container">
            <%= render @twitts %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= will_paginate @twitts, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
      <div class="col-md-2">
      </div>
      <div class="col-md-2">
      </div>
    </div>
  </div>
</div>